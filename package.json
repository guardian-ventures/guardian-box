{
    "name": "guardian-box",
    "version": "1.0.0",
    "description": "Guardian Truffle Box Boilerplate",
    "main": "index.js",
    "repository": "git@github.com:guardian.ventures/guardian-box.git",
    "author": "Nordic Energy Dev. <info@guardian.ventures>",
    "license": "MIT",
    "keywords": [
        "ethereum",
        "guardian.ventures",
        "smart contract"
    ],
    "dependencies": {
        "truffle": "^5.0.22",
        "truffle-hdwallet-provider": "^1.0.10"
    },
    "devDependencies": {
        "solium": "^1.2.4"
    },
    "scripts": {
        "compile": "truffle compile",
        "compile:testnet": "truffle compile --network guardian-testnet",
        "compile:mainnet": "truffle compile --network guardian-mainnet",
        "migrate": "truffle migrate",
        "migrate:testnet": "truffle migrate --network guardian-testnet",
        "migrate:mainnet": "truffle migrate --network guardian-mainnet",
        "test": "truffle test",
        "clean": "rm -rf build/contracts",
        "lint": "solium -d contracts/",
        "lint:fix": "solium -d contracts/ --fix"
    }
}